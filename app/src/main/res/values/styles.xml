<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="toolbarMenuTheme">

        <item name="android:textColor">@color/red_custom</item>
        <item name="android:textSize">@dimen/text_regular_2x</item>

        <item name="android:background">@color/icons</item>
    </style>
    <style name="floatingTheme">
        <item name="android:background">@color/fcolor</item>
    </style>

    <style name="yarggyi">
        <item name="android:textSize">12dp</item>
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">47dp</item>
    </style>

</resources>
